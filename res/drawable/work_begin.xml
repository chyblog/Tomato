<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="90" android:endColor="#003399" android:startColor="#003399" />
            <stroke android:width="1dp" android:color="#0044cc" />
            <corners android:radius="5dip" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:angle="90" android:endColor="#003399" android:startColor="#003399" />
            <stroke android:width="1dp" android:color="#0044cc" />
            <corners android:radius="5dip" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>
            <gradient android:angle="90" android:endColor="#0088CC" android:startColor="#0044CC" />
            <stroke android:width="1dp" android:color="#0044cc" />
            <corners android:radius="5dip" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
    <item android:state_active="false">
        <shape>
            <gradient android:angle="90" android:endColor="#0088CC" android:startColor="#0088CC" />
            <stroke android:width="1dp" android:color="#0088CC" />
            <corners android:radius="5dip" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
</selector>